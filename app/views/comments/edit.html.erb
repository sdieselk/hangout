<%= form_tag("/comments/#{@comment.id}/update") do %>
  <div class="form-group">
   <label for="exampleInputEmail1">コメントを編集する</label>
   <textarea name="comment[commentcontent]" class="form-control"><%= @comment.commentcontent %></textarea>
  </div><!--form-group-->
  <button type="submit" class="btn btn-primary">保存</button>
  <%= link_to comment_path(id: @comment.id),  method: :delete do %>
   <div class="btn btn-danger">削除</div>
  <% end %>
<% end %>
